<!doctype html>
<html>
    <head>

      <%# TO USE FONTAWESOME ICONS %>
      <script src="https://kit.fontawesome.com/74c7444b36.js" crossorigin="anonymous"></script>

        <style>

            body {
                font-family: Cambria;
                /* background-image: url("https://freefrontend.com/assets/img/css-background-patterns/blueprint-pattern-css3.png"); */ */
                background-color: #D6EAF8;
                }

         
            .hedges_header {
                background-color: #73C6B6;
                text-shadow: 2px 2px 5px #000000;
                          
                color: #FFFFFF;
                height: 50px;
                text-align: center;
                text-decoration: overline;
            }

            .hedges_header_addresses {
                
                background-color: #73C6B6;
                text-shadow: 2px 2px 5px #000000;    
                color: #EAFAF1;              
                height: 75px;
                text-align: center;
            }

            

            .my_navigation {
                float: right;
                border: 1px solid black;
                background: #73C6B6;
                padding: 4px 12px;
                border-radius: 4px 0 0 4px;
                box-shadow: 2px 2px 2px black; 
                color: white;
            }

            .my_footer {
                text-align: center;
                background-color: #73C6B6;
                height: 14px;
                letter-spacing: 4px;
            }

            .login_textbox_button{
                /* background-color: green; */
                font-size: 20px;
                text-align: center;
                font-weight: bold;
                box-sizing: border-box;
                border: 3px solid #43a390;
                padding-top: 8px;
                padding-bottom: 8px;                
            }

            .flashy{
                color: red;
            }

            .intro {
            
                text-align: center;
                color: #FFFFFF;
                text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
                border-left-style: solid;
                border-right-style: solid;
                /* border: 3px solid #43a390; */
                background-color: #73C6B6;
                letter-spacing: 4px;
            }

            .heading {
            
                text-align: center;
                color: #FFFFFF;
                text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
                border-left-style: solid;
                border-right-style: solid;
                /* border: 3px solid #43a390; */
                background-color: #73C6B6;
                letter-spacing: 4px;
            }


            .mybutton {
                font-size: 14px;
                font-family: Cambria;   
                color: #000;
                background-color: #fff;
                box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1); 
            }

            .mybutton:hover {
                background-color: #4ab5a0;
                box-shadow: 0px 8px 5px rgba(183, 225, 217, 0.4);
                color: #fff;
            }
            .mydeletebutton {
                font-size: 14px;
                font-family: Cambria;
                color: #000;
                background-color: #fff;
                box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            }
            .mydeletebutton:hover {
                background-color: red;
                box-shadow: 0px 8px 5px rgba(183, 225, 217, 0.4);
                color: #fff;
            }


            .flex-container {
                display: flex;
                flex-flow: row wrap;
                justify-content: space-around;
                
                box-sizing: border-box;
                background-color: #dbf0ec;
            }

            .flex-container > div {                
                text-align: center;
                padding: 3px;
                border: 3px solid #43a390;
                flex: 1 1 auto;
                flex-basis: 30%;
            }

            .what {
                text-shadow: 1px 1px 2px #000000;
            }



            .permit-container {
                max-width: 90%;
                margin: 0 auto;
                display: flex;
            }
                .first {
                    background-color: #73c6b6;
                    padding: 20px;
                    flex: 1;
                }
                .second{
                    background-color: #80cbbc;
                    flex: 2;
                    display: flex;
                    flex-direction: column;
                }
                    .second-a {
                        
                        padding: 10px;
                        flex: 1;
                    }
                    .second-b {
                        
                        padding: 10px;
                        flex: 1;
                    }

            .view_apartment_button{
                /* background-color: green; */
                font-family: Cambria;
                font-size: 20px;
                text-align: center;
                font-weight: bold;
                box-sizing: border-box;
                border: 3px solid #43a390;
                padding-top: 8px;
                padding-bottom: 8px;
                padding-left: 30px;
                padding-right: 30px;          
            }

            .apartment_show_header{
                font-size: 15px;
                text-align: center;
                font-weight: bold;
                box-sizing: border-box;
                border: 3px solid #43a390;
                text-shadow: 1px 1px 2px #000000;
            }




            .apartment-permit-heading {
                background-color: #73C6B6;
                font-weight: bold;
            }
            .apartment-permit-container {
                display: flex;
                flex-wrap: wrap;
                flex-direction: row;
                justify-content: space-around;
                align-items: stretch;
                align-content: stretch;
                background-color: #92d3c6;
            }
            .apartment-permit-container > div {
                flex: 0 0 auto;
                margin: 10px;
                background-color: #a4dacf;
                padding: 5px;
            }


            /* permit index page */
            .block-button{
                font-family: Cambria;
                display: block;
                width: 100%;
                text-align: left;
                padding: 2px;
                border-color: #73C6B6;
                background-color: white;
            }            

            
        </style>
    </head>

    <body>
          
        <div class="hedges_header"> 
            <h1>Name-O Apartment Complex</h1>
        </div>

        <div class="hedges_header_addresses">
            33A, 33B North Main Street<br>
            404A, 404B, 555 South Main Street<br>
            Mulberry, New York 99077<br>
            <br>   
        </div>

        <div class="intro">
            <u><h1>VEHICLE PERMITS</h1></u>
            <h1>REGISTRY & DATABASE</h1>
        </div>

        <%# <div class="my_code"> %>
        <%# yield -> INJECT THE REST OF my CODED erbPAGE HERE %>
              <%= yield %> 
        <%# </div> %>

            <% if request.path_info != "/" && request.path_info != "/login" && request.path_info != "/signup" %>
        <div class="my_navigation">
                <a href="/" style="text-decoration: none;"><i class="fas fa-grip-vertical"></i>DIRECTORY</a>
        </div>
            <% end %>

        <div class="my_footer">
            <% @user = current_user %> 
            <% if !@user %>

                    <% if !@user && request.path_info != "/login"  && request.path_info != "/signup" %>
                        <% redirect to "/login" %>
                    <% end %>

                <h6><a href="/login"> → l o g  i n ← </a></h6>
            <%else%>
                 <h6>LOGGED IN : CURRENT USER : <%= "#{@user.username}" %></h6>
                 <h6><a href="/logout">log out</a></h6>
            <% end %>
        </div>

    </body>
</html>